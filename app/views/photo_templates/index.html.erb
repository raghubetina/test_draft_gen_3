<h1>
  All photos
</h1>

<a href="/photos/new">
  Add a new photo
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Caption
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @photos.each do |photo| %>
  <tr>
    <td>
      <%= photo.id %>
    </td>

    <td>
      <%= photo.image %>
    </td>

    <td>
      <%= photo.caption %>
    </td>

    <td>
      <%= time_ago_in_words(photo.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(photo.updated_at) %> ago
    </td>

    <td>
      <a href="/photos/<%= photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
