<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <h1 class="card-header h4 d-flex align-items-center justify-content-between">
        All photos

        <a href="/photos/new" class="btn btn-sm btn-outline-secondary">
          <i class="fas fa-plus fa-fw"></i>
        </a>
      </h1>

      <div class="list-group list-group-flush">
        <% @photos.each do |photo| %>
          <a href="/photos/<%= photo.id %>" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
            Photo #<%= photo.id %>

            <span class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-chevron-right fa-fw"></i>
            </span>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
