<tr>
  <td>
    <%= movie.title %>
  </td>

  <td>
    <%= movie.description %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to fa_icon("search-plus fw"), movie, class: "btn btn-sm btn-outline-secondary" %>

      <%= link_to fa_icon("edit fw"), edit_movie_url(movie), class: "btn btn-sm btn-outline-secondary" %>

      <%= link_to fa_icon("trash-o fw"), movie, method: :delete, data: { confirm: "Do you really want to delete this movie?" }, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </td>
</tr>
